#:import C kivy.utils.get_color_from_hex

<InventoryScreen@Screen>:
    name: 'inventory'
    FitImage:
        source: 'RES/bg2.png'
    FloatLayout:
        MDLabel:
            text: 'EASYWARE'
            font_name: 'Nunito'
            color: "3b4949"
            font_size: .065 * root.height
            halign: 'right'
            size_hint: .5, .065
            pos_hint: {'right': .9 ,'top': .95}
        MDLabel:
            text: 'INVENTORY'
            font_name: 'Nunito'
            color: "ec8c6f"
            font_size: .035 * root.height
            halign: 'right'
            size_hint: .5, .035
            pos_hint: {'right': .9 ,'top': .89}

        CustomCard:
            pos_hint: {'center_x': .5,'center_y': 0.8}
            size_hint: .79, .075
            orientation: 'horizontal'
            TextInput:
                id: searchbox
                pos_hint: {'center_x': .5,'center_y': 0.5}
                hint_text: "EX. HAMMER"
                font_name: 'Nunito'
                font_size: .045 * root.height
                halign: "left"
                hint_text_color: "3b4949"
                cursor_color: "3b4949"
                foreground_color: "3b4949"
                background_normal: "3b4949" #change back to ""
                background_active: ""
                background_color: (0,0,0,0)
                multiline: False
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            MDIconButton:
                id: searchbtn
                icon: 'magnify'
                pos_hint: {'center_x': 0.5}
                size_hint: None, 1
                on_press:
                    print("search "+searchbox.text)

        MDBoxLayout:
            pos_hint: {'center_x': 0.5,'y': 0.175}
            size_hint: 1, .575
            ScrollView:
                size_hint: 1, 1
                showsIndicator: False
                MDGridLayout:
                    id: inventoryitems
                    cols:3
                    padding: root.width * .1,0,root.width * .1,0
                    spacing: root.width * .02
                    adaptive_height:True
        Button:
            text: 'ADD ITEM'
            text_color: '#ec8c6f'
            font_name: 'Nunito'
            font_size: root.height * .0325
            size_hint: .25, .045
            pos_hint: {'center_x': .5 ,'y': 0.11}
            background_color: (0,0,0,0)
            canvas.before:
                Color:
                    rgba: rgba(236,140,111,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [root.width * .02]
        MDCard:
            pos_hint: {'center_x': .5,'y': 0.0}
            size_hint: 1,.085
            md_bg_color: 'bdf4f1'
            radius:[0] 
            FloatLayout:
                pos_hint: {'center_x': .5,'center_y': 0.5}
                MDIconButton:
                    ripple_scale: 0
                    pos_hint: {'center_x': 0.4,'center_y': 0.5}
                    icon: "RES/userBLK.png"
                    icon_size: 27
                    on_press: app.root.current = 'management'
                MDIconButton:
                    ripple_scale: 0
                    pos_hint: {'center_x': 0.6,'center_y': 0.5}
                    icon: "RES/homePRSD.png"
                    icon_size: 27
