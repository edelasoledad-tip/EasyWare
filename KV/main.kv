#Custom Widgets

<CustomInputBorder@MDCard>:
    md_bg_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: rgba(112,236,228,255)
        Line:
            width: self.height * .035
            rounded_rectangle: self.x,self.y,self.width,self.height,self.height*.5,3,3,3,100

<RecycleCard>:
    md_bg_color: 0,0,0,0
    FloatLayout:
        MDCard:
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            md_bg_color: '70ece4'
            orientation: 'vertical'
            padding: root.width*.05
            spacing: root.width*.05
            radius: root.width*.1,root.width*.1,root.width*.1,0
            MDCard:
                size_hint: 1, .8
                padding: (0)
                radius: root.width*.05
                orientation: 'vertical'
                Image:
                    size_hint: .6, .6
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    source: root.image
                    allow_stretch: True
                MDLabel:
                    pos_hint: {'center_x': 0.5,'center_y': .1}
                    size_hint: 1, .2
                    halign: 'center'
                    text: root.name
                    color: "ec8c6f"
                    font_name: 'Nunito'
                    font_size: root.width*.1            
            MDLabel:
                pos_hint: {'center_x': 0.5,'center_y': .1}
                size_hint: 1, .2
                halign: 'center'
                text: f'P {str(root.price)}'
                color: "3b4949"
                font_name: 'Nunito'
                font_size: root.width*.2
        MDCard:
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            md_bg_color: 0,0,0,0
            on_release: 
                app.gotoItem(root.id)

